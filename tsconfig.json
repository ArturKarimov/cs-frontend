{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "src/**/*.test.*"],
  "include": ["src/**/*"]
}